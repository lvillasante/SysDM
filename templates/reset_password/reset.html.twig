{% extends 'base.html.twig' %}

{% block title %}| Nueva contraseña!
{% endblock %}

{% block class_body %}hold-transition login-page
{% endblock %}
{% block class_main_div %}login-box
{% endblock %}

{% block body %}
	<div class="login-logo">
		<a href="{{path('app_login')}}">
			{% if empresaGlobal=='fundempresa'%}
					<img src="{{asset('img/logo_fundempresa.png')}}" alt="Relaciones Comerciales | FUNDEMPRESA" width="100%">
				{% else %}
					<img src="{{asset('img/3negocios_cnc.png')}}" alt="CNC"  class="brand-image2 img-circle2 elevatin-5" width="100%">
				{% endif %}</a>
	</div>
	<div class="card">
		<div class="card-body login-card-body">
			<p class="login-box-msg">Escriba su nueva contraseña y recupere su password.</p>
			{{ form_start(resetForm) }}
			<div class="input-group mb-3">
				{{ form_widget(resetForm.plainPassword.first) }}
				<div class="input-group-append">
					<div class="input-group-text">
						<span class="fas fa-lock"></span>
					</div>
				</div>
			</div>
			<div class="input-group mb-3">
				{{ form_widget(resetForm.plainPassword.second) }}
				<div class="input-group-append">
					<div class="input-group-text">
						<span class="fas fa-lock"></span>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-12">
					<button type="submit" class="btn btn-primary btn-block">Cambiar contraseña</button>
				</div>
				<!-- /.col -->
			</div>
			{{ form_end(resetForm) }}
			<p class="mt-3 mb-1">
				<a href="{{path('app_login')}}">Ingresar</a>
			</p>
		</div>
	</div>


{% endblock %}
