{% extends 'base.html.twig' %}

{% block title %}| Olvidé mi contraseña!
{% endblock %}

{% block class_body %}hold-transition login-page
{% endblock %}
{% block class_main_div %}login-box
{% endblock %}
{% block body %}

	{% for flashError in app.flashes('reset_password_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}
	<div class="login-logo">
		<a href="{{path('app_login')}}">
			{% if empresaGlobal=='fundempresa'%}
					<img src="{{asset('img/logo_fundempresa.png')}}" alt="Relaciones Comerciales | FUNDEMPRESA" width="100%">
				{% else %}
					<img src="{{asset('img/3negocios_cnc.png')}}" alt="CNC"  class="brand-image2 img-circle2 elevatin-5" width="100%">
				{% endif %}</a>
	</div>
	<div class="card">
		<div class="card-body login-card-body">
			<p class="login-box-msg">Si olvidó su contraseña puede solicitar una nueva.</p>

			{{ form_start(requestForm) }}
			<div
				class="input-group mb-3">
				{# {{ form_row(requestForm.email) }} #}
				{{ form_widget(requestForm.email) }}
				<div class="input-group-append">
					<div class="input-group-text">
						<span class="fas fa-envelope"></span>
					</div>
				</div>
			</div>


			<div>
				<small>
					Ingrese su correo electronico y le enviaremos un link para restaurar su contraseña.
				</small>
			</div>
			<div class="row">
				<div class="col-12">
					<button type="submit" class="btn btn-primary btn-block">Solicitar</button>
				</div>
				<!-- /.col -->
			</div>

			{{ form_end(requestForm) }}
			<p class="mt-3 mb-1">
				<a href="{{path('app_login')}}">Ingresar</a>
			</p>
		</div>
	</div>
{% endblock %}
