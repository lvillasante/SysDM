/* 
Define all colors used in this template 
*/
/* Colores Dinamica Miasmatica*/
/* ROJO #d82329 */
.bg-rojo{
  -webkit-print-color-adjust: exact;
  color-adjust: exact;
	background-color: #d82329!important;
}

/* AZUL #276ba8*/
.bg-azul{
  -webkit-print-color-adjust: exact;
  color-adjust: exact;
	background-color: #276ba8!important;
}

/* VERDE #039949 */
.bg-verde{
  -webkit-print-color-adjust: exact;
  color-adjust: exact;
	background-color: #039949!important;
}

/* NEGRO #1b1919 */
.bg-negro{
  -webkit-print-color-adjust: exact;
